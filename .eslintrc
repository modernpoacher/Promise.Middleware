{
  "extends": "standard",
  "env": {
    "node": true,
    "browser": true,
    "es2020": true,
    "mocha": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "globals": {
    "expect": true,
    "chai": true,
    "sinon": true
  }
}
